# ===========================================
# Gold Shop Management System - Environment Variables
# ===========================================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control!

# ===========================================
# Production Server Configuration
# ===========================================
DOMAIN=mosaporgold.ir
SERVER_IP=45.156.186.85
BASE_URL=https://mosaporgold.ir

# ===========================================
# MySQL Database Configuration
# ===========================================
MYSQL_ROOT_PASSWORD=goldshop_root_2025_CHANGE_THIS
MYSQL_DATABASE=gold_shop_db
MYSQL_USER=goldshop_user
MYSQL_PASSWORD=goldshop_secure_pass_CHANGE_THIS

# Note: MySQL port is not exposed externally for security
# Access MySQL through: docker compose exec mysql mysql -u root -p

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production

# Session Secret (IMPORTANT: Change this to a random string!)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-this-to-a-long-random-string-for-production

# ===========================================
# Upload Configuration
# ===========================================
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760

# ===========================================
# Security Settings (Optional)
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings (if needed for API)
# CORS_ORIGIN=http://localhost:3000

# ===========================================
# Backup Configuration (Optional)
# ===========================================
BACKUP_PATH=./backups
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# ===========================================
# Development Settings (Optional)
# ===========================================
# Uncomment for development mode
# NODE_ENV=development
# DEBUG=express:*
