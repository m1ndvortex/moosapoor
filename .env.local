# ===========================================
# Gold Shop Management System - LOCAL TESTING
# ===========================================
# This is for LOCAL testing only
# For production VPS, use different passwords!

# ===========================================
# Production Server Configuration (for reference)
# ===========================================
DOMAIN=localhost
SERVER_IP=127.0.0.1
BASE_URL=http://localhost

# ===========================================
# MySQL Database Configuration
# ===========================================
MYSQL_ROOT_PASSWORD=local_root_password_123
MYSQL_DATABASE=gold_shop_db
MYSQL_USER=goldshop_user
MYSQL_PASSWORD=local_db_password_123

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development

# Session Secret (okay for local testing)
SESSION_SECRET=local-testing-secret-key-not-for-production

# ===========================================
# Upload Configuration
# ===========================================
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_PATH=./backups
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
