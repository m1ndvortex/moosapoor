    <script>
        // اعتبارسنجی کد ملی ایرانی
        function validateIranianNationalId(nationalId) {
            if (!nationalId || nationalId.length !== 10) {
                return false;
            }
            
            // بررسی اینکه همه ارقام یکسان نباشند
            if (/^(\d)\1{9}$/.test(nationalId)) {
                return false;
            }
            
            var sum = 0;
            for (var i = 0; i < 9; i++) {
                sum += parseInt(nationalId[i]) * (10 - i);
            }
            
            var remainder = sum % 11;
            var checkDigit = parseInt(nationalId[9]);
            
            return (remainder < 2 && checkDigit === remainder) || 
                   (remainder >= 2 && checkDigit === 11 - remainder);
        }

        // محاسبه رقم کنترل صحیح
        function calculateCorrectCheckDigit(nationalId) {
            if (!nationalId || nationalId.length < 9) {
                return '?';
            }
            
            var sum = 0;
            for (var i = 0; i < 9; i++) {
                sum += parseInt(nationalId[i]) * (10 - i);
            }
            
            var remainder = sum % 11;
            return remainder < 2 ? remainder : 11 - remainder;
        }

        // رد کردن اعتبارسنجی کد ملی (برای تست)
        function skipNationalIdValidation() {
            window.skipNationalIdValidationFlag = true;
            var nationalIdField = document.getElementById('national_id');
            
            if (nationalIdField.value.trim()) {
                showSuccess('national_id', '🧪 اعتبارسنجی رد شد - حالت تست فعال');
            }
            
            // نمایش پیام هشدار
            alert('⚠️ هشدار: اعتبارسنجی کد ملی غیرفعال شد!\n\nاین حالت فقط برای تست در نظر گرفته شده است.\nلطفاً در محیط تولید از کد ملی معتبر استفاده کنید.');
        }

        // اعتبارسنجی شماره موبایل
        function validatePhoneNumber(phone) {
            return /^09[0-9]{9}$/.test(phone);
        }

        // اعتبارسنجی ایمیل
        function validateEmail(email) {
            return /^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/.test(email);
        }

        // نمایش خطا
        function showError(fieldId, message) {
            var field = document.getElementById(fieldId);
            var errorElement = document.getElementById(fieldId + '_error');
            var successElement = document.getElementById(fieldId + '_success');
            
            field.classList.add('error');
            field.classList.remove('success');
            
            if (errorElement) {
                errorElement.textContent = message;
                errorElement.style.display = 'block';
            }
            
            if (successElement) {
                successElement.style.display = 'none';
            }
        }

        // نمایش موفقیت
        function showSuccess(fieldId, message) {
            var field = document.getElementById(fieldId);
            var errorElement = document.getElementById(fieldId + '_error');
            var successElement = document.getElementById(fieldId + '_success');
            
            field.classList.remove('error');
            field.classList.add('success');
            
            if (errorElement) {
                errorElement.style.display = 'none';
            }
            
            if (successElement && message) {
                successElement.textContent = message;
                successElement.style.display = 'block';
            }
        }

        // پاک کردن خطا
        function clearError(fieldId) {
            var field = document.getElementById(fieldId);
            var errorElement = document.getElementById(fieldId + '_error');
            var successElement = document.getElementById(fieldId + '_success');
            
            field.classList.remove('error', 'success');
            
            if (errorElement) {
                errorElement.style.display = 'none';
            }
            
            if (successElement) {
                successElement.style.display = 'none';
            }
        }

        // اعتبارسنجی فرم
        function validateForm() {
            var isValid = true;
            var errors = [];
            
            // نام کامل (اجباری)
            var fullName = document.getElementById('full_name').value.trim();
            if (!fullName) {
                showError('full_name', 'نام و نام خانوادگی الزامی است');
                errors.push('نام و نام خانوادگی را وارد کنید');
                isValid = false;
            } else if (fullName.length < 3) {
                showError('full_name', 'نام باید حداقل 3 کاراکتر باشد');
                errors.push('نام باید حداقل 3 کاراکتر باشد');
                isValid = false;
            } else {
                clearError('full_name');
            }
            
            // کد ملی (اختیاری اما اگر وارد شد باید معتبر باشد)
            var nationalId = document.getElementById('national_id').value.trim();
            var skipValidation = window.skipNationalIdValidationFlag || false;
            
            if (nationalId && !skipValidation) {
                if (!validateIranianNationalId(nationalId)) {
                    var correctDigit = calculateCorrectCheckDigit(nationalId);
                    showError('national_id', `کد ملی وارد شده معتبر نیست. کد صحیح احتمالی: ${nationalId.substr(0, 9)}${correctDigit}`);
                    errors.push('کد ملی معتبر نیست یا از نمونه‌های معتبر استفاده کنید');
                    isValid = false;
                } else {
                    showSuccess('national_id', '✓ کد ملی معتبر است');
                }
            } else if (nationalId && skipValidation) {
                showSuccess('national_id', '🧪 اعتبارسنجی رد شد (حالت تست)');
            } else {
                clearError('national_id');
            }
            
            // شماره تماس
            var phone = document.getElementById('phone').value.trim();
            if (phone && !validatePhoneNumber(phone)) {
                showError('phone', 'شماره تماس معتبر نیست (09xxxxxxxxx)');
                errors.push('شماره تماس معتبر نیست');
                isValid = false;
            } else {
                clearError('phone');
            }
            
            // شماره اضطراری
            var emergencyPhone = document.getElementById('emergency_phone').value.trim();
            if (emergencyPhone && !validatePhoneNumber(emergencyPhone)) {
                showError('emergency_phone', 'شماره اضطراری معتبر نیست (09xxxxxxxxx)');
                errors.push('شماره اضطراری معتبر نیست');
                isValid = false;
            } else {
                clearError('emergency_phone');
            }
            
            // ایمیل
            var email = document.getElementById('email').value.trim();
            if (email && !validateEmail(email)) {
                showError('email', 'آدرس ایمیل معتبر نیست');
                errors.push('آدرس ایمیل معتبر نیست');
                isValid = false;
            } else {
                clearError('email');
            }
            
            // نمایش خلاصه خطاها
            var validationSummary = document.getElementById('validationSummary');
            var validationList = document.getElementById('validationList');
            
            if (errors.length > 0) {
                validationList.innerHTML = errors.map(function(error) {
                    return '<li>' + error + '</li>';
                }).join('');
                validationSummary.style.display = 'block';
                validationSummary.scrollIntoView({ behavior: 'smooth', block: 'center' });
            } else {
                validationSummary.style.display = 'none';
            }
            
            return isValid;
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            var form = document.getElementById('customerForm');
            var submitBtn = document.getElementById('submitBtn');
            var loadingSpinner = document.getElementById('loadingSpinner');
            var submitText = document.getElementById('submitText');
            
            // اعتبارسنجی real-time کد ملی
            document.getElementById('national_id').addEventListener('input', function() {
                var value = this.value.trim();
                var skipValidation = window.skipNationalIdValidationFlag || false;
                
                if (value && !skipValidation) {
                    if (validateIranianNationalId(value)) {
                        showSuccess('national_id', '✓ کد ملی معتبر است');
                    } else if (value.length === 10) {
                        var correctDigit = calculateCorrectCheckDigit(value);
                        showError('national_id', `کد ملی معتبر نیست. احتمالاً باید ${value.substr(0, 9)}${correctDigit} باشد`);
                    } else if (value.length === 9) {
                        var correctDigit = calculateCorrectCheckDigit(value + '0');
                        this.setAttribute('placeholder', `کد ملی - رقم آخر احتمالی: ${correctDigit}`);
                        clearError('national_id');
                    } else {
                        this.setAttribute('placeholder', 'کد ملی 10 رقمی');
                        clearError('national_id');
                    }
                } else if (value && skipValidation) {
                    showSuccess('national_id', '🧪 حالت تست - اعتبارسنجی رد شده');
                } else {
                    this.setAttribute('placeholder', 'کد ملی 10 رقمی');
                    clearError('national_id');
                }
            });
            
            // فقط عدد برای کد ملی
            document.getElementById('national_id').addEventListener('keypress', function(e) {
                if (!/[0-9]/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                    e.preventDefault();
                }
            });
            
            // اعتبارسنجی شماره تماس real-time
            document.getElementById('phone').addEventListener('input', function() {
                var value = this.value.trim();
                if (value && value.length === 11) {
                    if (validatePhoneNumber(value)) {
                        showSuccess('phone', '✓ شماره معتبر است');
                    } else {
                        showError('phone', 'شماره تماس معتبر نیست');
                    }
                } else if (value) {
                    clearError('phone');
                }
            });
            
            // اعتبارسنجی شماره اضطراری real-time
            document.getElementById('emergency_phone').addEventListener('input', function() {
                var value = this.value.trim();
                if (value && value.length === 11) {
                    if (validatePhoneNumber(value)) {
                        showSuccess('emergency_phone', '✓ شماره معتبر است');
                    } else {
                        showError('emergency_phone', 'شماره تماس معتبر نیست');
                    }
                } else if (value) {
                    clearError('emergency_phone');
                }
            });
            
            // اعتبارسنجی ایمیل real-time
            document.getElementById('email').addEventListener('input', function() {
                var value = this.value.trim();
                if (value && value.includes('@')) {
                    if (validateEmail(value)) {
                        showSuccess('email', '✓ ایمیل معتبر است');
                    } else {
                        showError('email', 'آدرس ایمیل معتبر نیست');
                    }
                } else if (value) {
                    clearError('email');
                }
            });
            
            // Manual Birth Date Input Handler
            function updateBirthDate() {
                var day = document.getElementById('birth_day').value;
                var month = document.getElementById('birth_month').value;
                var year = document.getElementById('birth_year').value;
                
                if (day && month && year) {
                    try {
                        // تبدیل تاریخ شمسی به میلادی
                        var gregorianDate = moment(year + '/' + month + '/' + day, 'jYYYY/jM/jD');
                        
                        if (gregorianDate.isValid()) {
                            document.getElementById('birth_date').value = gregorianDate.format('YYYY-MM-DD');
                        } else {
                            document.getElementById('birth_date').value = '';
                        }
                    } catch (error) {
                        document.getElementById('birth_date').value = '';
                    }
                } else {
                    document.getElementById('birth_date').value = '';
                }
            }

            // Add event listeners for birth date inputs
            document.getElementById('birth_day').addEventListener('input', updateBirthDate);
            document.getElementById('birth_month').addEventListener('change', updateBirthDate);
            document.getElementById('birth_year').addEventListener('input', updateBirthDate);
            
            // ارسال فرم
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (!validateForm()) {
                    return;
                }
                
                submitBtn.disabled = true;
                loadingSpinner.style.display = 'inline-block';
                submitText.textContent = 'در حال بروزرسانی...';
                
                // ارسال فرم
                this.submit();
            });
        });
    </script>
