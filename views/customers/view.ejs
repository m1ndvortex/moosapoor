    border-radius: 15px;
    font-size: 0.8em;
    font-weight: 600;
}

.type-normal { background: #e9ecef; color: #495057; }
.type-vip { background: #fff3cd; color: #856404; }
.type-wholesale { background: #d1ecf1; color: #0c5460; }
.type-regular { background: #d4edda; color: #155724; }

.actions-section {
    background: white;
    border-radius: 15px;
    padding: 25px;
    margin-bottom: 30px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

.actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
}

.action-btn {
