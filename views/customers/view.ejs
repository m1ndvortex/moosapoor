    font-size: 2.2em;
    font-weight: bold;
}

.page-header-enhanced p {
    margin: 0;
    font-size: 1.1em;
    opacity: 0.9;
}

.customer-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 25px;
    margin-bottom: 30px;
}

.info-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    border: 2px solid #f8f9fa;
    transition: all 0.3s ease;
}

.info-card:hover {
