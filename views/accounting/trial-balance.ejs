<!-- Trial Balance Table -->
<div class="card">
    <div class="card-header">
        تراز آزمایشی
        <span class="badge badge-info float-left">حساب‌های فعال</span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead style="background: #f8f9fa;">
                    <tr>
                        <th>کد حساب</th>
                        <th>نام حساب</th>
                        <th>نوع حساب</th>
                        <th style="text-align: left;">بدهکار (ریال)</th>
                        <th style="text-align: left;">بستانکار (ریال)</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample account rows will be populated here -->
                    <tr>
                        <td><code>1001</code></td>
                        <td>صندوق</td>
                        <td><span class="badge badge-success">دارایی</span></td>
                        <td style="text-align: left; font-weight: bold; color: #28a745;">-</td>
                        <td style="text-align: left; font-weight: bold; color: #dc3545;">-</td>
                    </tr>
                    
                    <!-- Grand Total -->
                    <tr style="background: #007bff; color: white; font-weight: bold; font-size: 1.1em;">
                        <td colspan="3" class="text-center">
                            <strong>مجموع کل</strong>
                        </td>
                        <td style="text-align: left;">
                            <strong>0</strong>
                        </td>
                        <td style="text-align: left;">
                            <strong>0</strong>
                        </td>
                    </tr>
                    
                    <!-- Balance Check -->
                    <tr style="background: #d4edda;">
                        <td colspan="3" class="text-center">
                            <strong>✅ تراز متعادل است</strong>
                        </td>
                        <td colspan="2" style="text-align: center;">
                            <strong>اختلاف: 0</strong>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

