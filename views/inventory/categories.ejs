                        🗑️ تأیید حذف
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// تابع نمایش modal مرکزی
function confirmDelete(categoryId, categoryName) {
    // تنظیم نام دسته‌بندی
    document.getElementById('deleteCategoryName').textContent = categoryName;
    
    // تنظیم action فرم حذف
    document.getElementById('deleteForm').action = '/inventory/categories/delete/' + categoryId;
    
    // نمایش modal در مرکز صفحه
    var modal = document.getElementById('deleteModal');
    modal.classList.add('show');
    modal.style.display = 'flex';
    
    // افزودن backdrop
    var backdrop = document.createElement('div');
    backdrop.className = 'modal-backdrop';
    backdrop.style.cssText = 
        'position: fixed; ' +
        'top: 0; ' +
        'left: 0; ' +
        'width: 100%; ' +
        'height: 100%; ' +
        'background: rgba(0,0,0,0.5); ' +
        'z-index: 1040;';
    backdrop.id = 'modalBackdrop';
    document.body.appendChild(backdrop);
    
    // بستن modal با کلیک روی backdrop
    backdrop.onclick = function() {
        closeModal();
    };
    
    // منع scroll صفحه
    document.body.style.overflow = 'hidden';
}

// تابع بستن modal
function closeModal() {
    var modal = document.getElementById('deleteModal');
    var backdrop = document.getElementById('modalBackdrop');
    
    modal.classList.remove('show');
    modal.style.display = 'none';
    
    if (backdrop) {
        backdrop.remove();
    }
    
    // بازگرداندن scroll صفحه
    document.body.style.overflow = 'auto';
}

// بستن modal با دکمه ESC
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeModal();
    }
});

// مخفی کردن خودکار پیام‌ها
setTimeout(function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
        alert.style.transition = 'opacity 0.5s ease';
        alert.style.opacity = '0';
        setTimeout(function() {
            alert.remove();
        }, 500);
    });
}, 3000);

// بستن manual پیام‌ها
document.addEventListener('DOMContentLoaded', function() {
    const closeButtons = document.querySelectorAll('[data-dismiss="alert"]');
    closeButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            const alert = button.closest('.alert');
            alert.style.transition = 'opacity 0.3s ease';
            alert.style.opacity = '0';
            setTimeout(function() {
                alert.remove();
            }, 300);
        });
    });
    
    // بستن modal با دکمه close
    const modalCloseButtons = document.querySelectorAll('[data-dismiss="modal"]');
    modalCloseButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            closeModal();
        });
    });
});

// انیمیشن‌های ملایم برای کارت‌ها
document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.category-group, .stat-card');
    cards.forEach(function(card, index) {
        card.style.opacity = '0';
        card.style.transform = 'translateY(10px)';
        card.style.transition = 'opacity 0.4s ease, transform 0.4s ease';
        
        setTimeout(function() {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, 50 * index);
    });
});
</script> 