}

.modal-header .modal-title {
    font-size: 1.1em;
    font-weight: bold;
}

.modal-header .close {
    color: white;
    opacity: 0.8;
    font-size: 1.2em;
    border: none;
    background: none;
    padding: 0;
    margin-left: auto;
}

.modal-body {
    padding: 20px;
}

.delete-warning-box {
    background: #fff3cd;
    border: 1px solid #ffeaa7;
    border-radius: 6px;
    padding: 12px;
    margin: 15px 0;
}

.delete-category-name {
    background: #f8f9fa;
    padding: 10px;
    border-radius: 6px;
    text-align: center;
    margin: 15px 0;
    font-weight: bold;
    color: #495057;
}

.modal-footer {
