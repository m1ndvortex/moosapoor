}

.alert-success-custom {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
}

.alert-warning-custom {
    background: #fff3cd;
    border: 1px solid #ffeaa7;
    color: #856404;
}

/* حذف حالت نمایش پیش‌فرض modal */
.modal.fade {
    display: none;
}
</style>

<div class="category-system">
    <div class="page-header">
        <h1>🏆 مدیریت دسته‌بندی‌ها</h1>
        <p>سامانه مدیریت دسته‌بندی‌های انبار طلافروشی زرین</p>
    </div>

    <!-- Success/Error Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success-custom alert-dismissible fade show">
            <strong>✅ موفقیت:</strong> <%= success %>
            <button type="button" class="close" data-dismiss="alert" style="color: inherit;">
                <span>&times;</span>
            </button>
        </div>
    <% } %>

    <!-- Quick Actions -->
    <div class="card quick-actions-card mb-3">
        <div class="card-header">
            <h6 class="mb-0">⚡ عملیات سریع</h6>
        </div>
        <div class="card-body" style="padding: 12px 15px;">
            <div class="quick-actions-container">
                <a href="/inventory/categories/add" class="btn btn-light quick-action-btn">
                    ➕ دسته‌بندی جدید
                </a>
                <a href="/inventory" class="btn btn-outline-light quick-action-btn">
                    📦 بازگشت به انبار
                </a>
                <a href="/inventory/add" class="btn btn-warning quick-action-btn">
                    🏷️ افزودن کالا
                </a>
            </div>
        </div>
    </div>

    <!-- Categories Overview -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 20px;">
        <div class="stat-card">
            <div class="stat-icon">📁</div>
            <div class="stat-number"><%= formatNumber(mainCategories.length) %></div>
            <div class="stat-label">دسته‌بندی اصلی</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">📂</div>
            <div class="stat-number"><%= formatNumber(subCategories.length) %></div>
            <div class="stat-label">زیرمجموعه</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">🏷️</div>
            <div class="stat-number">
                <%= formatNumber(allCategories.reduce((sum, cat) => sum + (cat.items_count || 0), 0)) %>
            </div>
            <div class="stat-label">کل کالاها</div>
        </div>
    </div>

