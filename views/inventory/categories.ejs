        <div class="card-header" style="background: linear-gradient(135deg, #b8860b 0%, #daa520 100%); color: #2c2c2c; border-radius: 8px 8px 0 0;">
            <h6 class="mb-0">📋 فهرست دسته‌بندی‌ها</h6>
        </div>
        <div class="card-body" style="padding: 20px;">
            <% if (mainCategories.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-state-icon">📁</div>
                    <h5>هیچ دسته‌بندی‌ای تعریف نشده است</h5>
                    <p class="mb-3">برای شروع، اولین دسته‌بندی خود را ایجاد کنید</p>
                    <a href="/inventory/categories/add" class="btn btn-primary">
                        🚀 ایجاد اولین دسته‌بندی
                    </a>
                </div>
            <% } else { %>
                <% mainCategories.forEach(function(mainCat) { %>
                    <div class="category-group">
                        <!-- Main Category Header -->
                        <div class="main-category-header">
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div class="main-category-info">
                                    <div class="main-category-icon">📁</div>
                                    <div class="main-category-title">
                                        <h3><%= mainCat.name_persian %></h3>
                                        <div class="subtitle">
                                            <strong><%= mainCat.name %></strong>
                                            <% if (mainCat.description) { %>
                                                • <%= mainCat.description %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <div class="category-badges">
                                        <span class="badge-modern">
                                            📂 <%= formatNumber(mainCat.subcategories_count) %>
                                        </span>
                                        <span class="badge-modern">
                                            🏷️ <%= formatNumber(mainCat.items_count) %>
                                        </span>
                                    </div>
                                    
                                    <div class="category-actions">
                                        <a href="/inventory/categories/edit/<%= mainCat.id %>" 
                                           class="btn-action" title="ویرایش دسته‌بندی">
                                            ✏️
                                        </a>
                                        <button onclick="confirmDelete(<%= mainCat.id %>, '<%= mainCat.name_persian %>')" 
                                                class="btn-action" title="حذف دسته‌بندی">
                                            🗑️
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Subcategories -->
                        <div class="subcategories-container">
                            <% 
                            var categorySubItems = subCategories.filter(function(sub) { 
                                return sub.parent_id == mainCat.id; 
                            }); 
                            %>
                            
                            <% if (categorySubItems.length === 0) { %>
                                <div style="text-align: center; padding: 25px; color: #8b7355;">
                                    <div style="font-size: 2em; margin-bottom: 10px; opacity: 0.3; color: #d4af37;">📂</div>
                                    <h6>هیچ زیرمجموعه‌ای تعریف نشده</h6>
                                    <p class="mb-0" style="font-size: 0.9em;">برای این دسته‌بندی زیرمجموعه ایجاد کنید</p>
                                </div>
                            <% } else { %>
                                <div class="subcategory-grid">
                                    <% categorySubItems.forEach(function(subCat) { %>
                                        <div class="subcategory-card">
                                            <div class="subcategory-header">
                                                <div class="subcategory-info">
                                                    <div class="subcategory-icon">📂</div>
                                                    <div>
                                                        <h6 class="subcategory-title"><%= subCat.name_persian %></h6>
                                                        <div class="subcategory-meta">
                                                            <strong><%= subCat.name %></strong> • 
                                                            🏷️ <%= formatNumber(subCat.items_count) %> کالا
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div style="display: flex; gap: 5px;">
                                                    <a href="/inventory/categories/edit/<%= subCat.id %>" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       style="border-radius: 50%; width: 26px; height: 26px; display: flex; align-items: center; justify-content: center; font-size: 0.8em;"
                                                       title="ویرایش">
                                                        ✏️
                                                    </a>
                                                    <button onclick="confirmDelete(<%= subCat.id %>, '<%= subCat.name_persian %>')" 
                                                            class="btn btn-sm btn-outline-danger"
                                                            style="border-radius: 50%; width: 26px; height: 26px; display: flex; align-items: center; justify-content: center; font-size: 0.8em;"
                                                            title="حذف">
                                                        🗑️
                                                    </button>
                                                </div>
                                            </div>
                                            
                                            <% if (subCat.description) { %>
                                                <div class="subcategory-description">
                                                    <%= subCat.description %>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } %>
                            
                            <!-- Add Subcategory Button -->
                            <div style="text-align: center; margin-top: 15px;">
                                <a href="/inventory/categories/add?parent=<%= mainCat.id %>" 
                                   class="btn add-subcategory-btn">
                                    ➕ افزودن زیرمجموعه
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

