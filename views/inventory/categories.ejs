    margin: 20px;
}

.modal-content {
    border-radius: 10px;
    border: none;
    box-shadow: 0 15px 35px rgba(0,0,0,0.3);
    background: white;
    overflow: hidden;
}

.modal-header {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
    border-bottom: none;
