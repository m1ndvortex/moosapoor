<style>
.category-system {
    font-family: 'IRANSans', 'Tahoma', sans-serif;
    line-height: 1.5;
}

.page-header {
    background: linear-gradient(135deg, #b8860b 0%, #daa520 100%);
    color: #2c2c2c;
    padding: 20px 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
    box-shadow: 0 2px 10px rgba(184, 134, 11, 0.25);
}

.page-header h1 {
    margin: 0;
    font-size: 1.8em;
    font-weight: bold;
}

.page-header p {
    margin: 8px 0 0 0;
    opacity: 0.8;
    font-size: 1em;
}

.stat-card {
    background: linear-gradient(145deg, #faf8f0, #f5f2e8);
    border: 1px solid #d4c5a0;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(184, 134, 11, 0.12);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    position: relative;
}

.stat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(184, 134, 11, 0.2);
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(45deg, #d4af37, #ffd700);
}

.stat-number {
    font-size: 1.8em;
    font-weight: bold;
    color: #b8860b;
    margin-bottom: 5px;
}

.stat-label {
    font-size: 0.9em;
    color: #8b7355;
    font-weight: 500;
}

.stat-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 1.2em;
    opacity: 0.4;
    color: #d4af37;
}

.category-group {
    margin-bottom: 25px;
    border: 1px solid #e6d5a8;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(212, 175, 55, 0.1);
    transition: transform 0.2s ease;
}

.category-group:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.2);
}

.main-category-header {
    background: linear-gradient(135deg, #b8860b 0%, #daa520 100%);
    color: #2c2c2c;
    padding: 15px;
    position: relative;
}

.main-category-info {
    display: flex;
    align-items: center;
    gap: 12px;
}

.main-category-icon {
    font-size: 1.5em;
    opacity: 0.8;
}

.main-category-title {
    flex-grow: 1;
}

.main-category-title h3 {
    margin: 0;
    font-size: 1.2em;
    font-weight: bold;
}

.main-category-title .subtitle {
    margin-top: 3px;
    opacity: 0.7;
    font-size: 0.85em;
}

.category-badges {
    display: flex;
    gap: 8px;
    margin-left: 10px;
}

.badge-modern {
    background: rgba(255,255,255,0.3);
    color: #2c2c2c;
    border: 1px solid rgba(255,255,255,0.4);
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.75em;
    font-weight: 500;
}

.category-actions {
    display: flex;
    gap: 5px;
}

.btn-action {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.3);
    border: 1px solid rgba(255,255,255,0.4);
    color: #2c2c2c;
    transition: all 0.2s ease;
    font-size: 0.9em;
}

.btn-action:hover {
    background: rgba(255,255,255,0.8);
    color: #2c2c2c;
    transform: scale(1.05);
}

.subcategories-container {
    padding: 15px;
    background: #fafbfc;
}

.subcategory-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 12px;
    margin-bottom: 15px;
}

.subcategory-card {
    background: white;
    border: 1px solid #e6d5a8;
    border-radius: 6px;
    padding: 12px;
    transition: all 0.2s ease;
    position: relative;
}

.subcategory-card:hover {
    border-color: #d4af37;
    box-shadow: 0 2px 8px rgba(212, 175, 55, 0.15);
    transform: translateY(-1px);
}

.subcategory-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.subcategory-info {
    display: flex;
    align-items: center;
    gap: 8px;
}

.subcategory-icon {
    font-size: 1.2em;
    color: #d4af37;
}

.subcategory-title {
    font-size: 1em;
    font-weight: bold;
    color: #2c2c2c;
    margin: 0;
}

.subcategory-meta {
    font-size: 0.8em;
    color: #8b7355;
    margin-top: 2px;
}

.subcategory-description {
    margin-top: 8px;
    padding-top: 8px;
    border-top: 1px solid #f1f3f4;
    font-size: 0.8em;
    color: #8b7355;
    line-height: 1.4;
}

.add-subcategory-btn {
    background: linear-gradient(135deg, #b8860b 0%, #daa520 100%);
    border: none;
    color: #2c2c2c;
    padding: 8px 16px;
    border-radius: 15px;
    font-weight: 500;
    font-size: 0.85em;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(184, 134, 11, 0.18);
}

.add-subcategory-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(184, 134, 11, 0.25);
    color: #2c2c2c;
}

.quick-actions-card {
    background: linear-gradient(135deg, #b8860b 0%, #daa520 100%);
    color: #2c2c2c;
    border: none;
    border-radius: 8px;
}

.quick-actions-card .card-header {
    background: rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(0,0,0,0.1);
    color: #2c2c2c;
    font-weight: bold;
    padding: 10px 15px;
}

.quick-actions-container {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.quick-action-btn {
    padding: 8px 15px;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9em;
    transition: all 0.2s ease;
    border: 1px solid transparent;
}

.quick-action-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

.empty-state {
    text-align: center;
    padding: 40px 15px;
    color: #8b7355;
}

.empty-state-icon {
    font-size: 2.5em;
    margin-bottom: 15px;
    opacity: 0.4;
    color: #d4af37;
}

.empty-state h4 {
    margin-bottom: 10px;
    color: #6b5b3d;
}

/* Modal مرکزی و حرفه‌ای */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1050;
}

.modal.show {
    display: flex !important;
}

.modal-dialog {
